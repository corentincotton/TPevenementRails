<%- model_class = EventUser -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:event_id) %>:</strong></dt>
  <dd><%= @event_user.event_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @event_user.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:presence) %>:</strong></dt>
  <dd><%= @event_user.presence %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organizer) %>:</strong></dt>
  <dd><%= @event_user.organizer %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              event_users_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_user_path(@event_user), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_user_path(@event_user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
